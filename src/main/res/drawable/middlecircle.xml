<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="360"
                android:startColor="#00b0ff"
                android:endColor="#0078ff"
                android:type="linear" />
            <size android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>

    <item
        android:bottom="0.7dp"
        android:left="0.7dp"
        android:right="0.7dp"
        android:top="0.7dp">
        <shape android:shape="oval" >
            <solid android:color="#22242b" />
        </shape>
    </item>

</layer-list>
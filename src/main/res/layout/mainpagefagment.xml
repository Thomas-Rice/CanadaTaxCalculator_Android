<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PurchaseGoods">

    <TextView
        android:id="@+id/BillTotalValue"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="233dp"
        android:layout_marginRight="233dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TaxCalculationTableLayout" />

    <ImageView
        android:id="@+id/MiddleCircle"
        android:layout_width="302dp"
        android:layout_height="287dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/middlecircle" />

    <Button
        android:id="@+id/addToBillButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundbuttonwithplus"
        android:gravity="center"
        android:onClick="CreateBillItem"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:id="@+id/CurrencyTableLayout"
        android:layout_width="95dp"
        android:layout_height="53dp"
        android:layout_marginEnd="156dp"
        android:layout_marginRight="156dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.474">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/currencyText"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="GBP: "
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="227dp" />

            <TextView
                android:id="@+id/currencyValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="306dp" />
        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/priceInput"
        android:layout_width="378dp"
        android:layout_height="74dp"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center"
        android:hint="@string/enter_price_title"
        android:inputType="numberDecimal"
        android:shadowColor="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MiddleCircle" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="317dp"
        android:layout_height="61dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/bigroundbutton"
        android:onClick="SetValues"
        android:text="@string/calculate_button_text"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceInput"
        app:layout_constraintVertical_bias="0.539" />

    <Button
        android:id="@+id/AddTipButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundbuttonwithplus"
        android:gravity="center"
        android:onClick="showPopup"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:id="@+id/TaxCalculationTableLayout"
        android:layout_width="334dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculateButton">

        <TableRow
            android:layout_width="216dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/provinceText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/gst_text"
                android:textColor="@android:color/background_light"
                app:autoSizeTextType="uniform"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="227dp" />

            <TextView
                android:id="@+id/provinceValue"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/background_light"
                app:autoSizeTextType="uniform"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="306dp" />

            <TextView
                android:id="@+id/canadaText"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:gravity="center"
                android:text="@string/qst_text"
                android:textColor="@android:color/background_light"
                app:autoSizeTextType="uniform"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="227dp" />

            <TextView
                android:id="@+id/canadaValue"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/background_light"
                app:autoSizeTextType="uniform"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="395dp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/total"
        android:layout_width="316dp"
        android:layout_height="90dp"
        android:layout_marginTop="240dp"
        android:gravity="center"
        android:text="$0"
        android:textColor="@android:color/background_light"
        android:textSize="80sp"
        app:autoSizeMaxTextSize="80dp"
        app:autoSizeMinTextSize="10dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/BillTotal"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Bill Total"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TaxCalculationTableLayout" />


</android.support.constraint.ConstraintLayout>